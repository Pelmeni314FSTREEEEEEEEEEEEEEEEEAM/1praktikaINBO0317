#include <iostream> 
using namespace std; 

int main() 
{ 
int a=228,b=1337; 
float c=3.14,d=2.71; 
printf ("a+b=%i\n",a+b); 
printf ("a-b=%i\n",a-b); 
printf ("c+d=%.2f\n",c+d); 
printf ("c-d=%.2f\n",c-d); 
return 0; 
}
